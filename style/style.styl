sand-dark = #82521f
sand-dark-rgba = rgba(130, 82, 31, 0.5)
sand = #A2723F

animation()
  -webkit-animation: arguments
  -moz-animation: arguments
  -ms-animation: arguments
  -o-animation: arguments
  animation: arguments

transform()
  -webkit-transform: arguments
  -moz-transform: arguments
  -ms-transform: arguments
  -o-transform: arguments
  transform: arguments

corner()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  -ms-border-radius: arguments
  -o-border-radius: arguments
  border-radius: arguments

@keyframes crab-scuttle
  0%
    transform(rotation(-10deg)) 
  50%
    transform(rotation(10deg))
  100%
    transform(rotation(-10deg))

@keyframes beachball-spin
  0%
    background-position: 0px 0px;

  10%
    background-position: 0px -1440px;

  20%
    background-position: 0px -1280px;
  
  30%
    background-position: 0px -1120px;

  40%
    background-position: 0px -960px;

  50%
    background-position: 0px -800px;

  60%
    background-position: 0px -640px;

  70%
    background-position: 0px -480px;
  
  80%
    background-position: 0px -320px;

  90%
    background-position: 0px -160px;

  100%
    background-position: 0px 0px;

@keyframes jump
  0%
    transform(translateY(0px))
  50%
    transform(translateY(-100px))
  100%
    transform(translateY(0px))

.jump
  animation(jump 0.8s ease-in-out 0s 1)

button, input[type="button"], input[type="reset"], input[type="submit"]
  cursor: pointer
  -webkit-appearance: button
  *overflow: visible

body
  padding: 0px
  margin: 0px
  position: relative
  font-family: 'Wellfleet', 'Arial', sans

#beachball * .image
  width: 160px
  height: 160px
  background-image: url('../images/beachball-uni.png')
  background-repeat: no-repeat
  animation(beachball-spin 1.5s step-start 0s infinite) 

#beachball
  position: fixed
  width: 160px
  height: 160px
  left: 50%
  top: 50%
  z-index: 10
  
#beach
  position: fixed
  width: 100%
  height: 100% 
  background-image: url('../images/sand.png')
  background-position: 0 0

#dune, #crab, #pink-crab, #hit-icon
  display: none

.dune, .crab
  position: fixed

.crab
  animation(crab-scuttle 1s step-start 0s infinite)

.invulnerable
  opacity: 0.5

.hit-icon
  width: 50px
  height: 50px
  margin: 8px

#hit-counter  
  position: absolute
  left: -20px
  top: -80px
  width: 200px
  corner(10px)
  background: rgba(255, 255, 255, 0.4)
  z-index: 20

header h1, header h3
  width: 100%
  text-align: center
  font-size: 28pt
  margin: 0
  padding: 0

header h3
  font-size: 18pt

header
  color: white
  background: sand-dark-rgba
  padding: 15px
  position: fixed
  width: 100%
  min-height: 65px
  height: auto
  z-index: 15
